{
  "name": "app",
  "version": "1.0.50",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "prettier:check": "bunx prettier --check src/**/*.ts",
    "prettier:write": "bunx prettier --write src/**/*.ts",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "bun run lint --fix",
    "ti1": "bunx vitest run src/test/integration/reset-database.test.ts",
    "test:coverage": "bunx vitest run --coverage",
    "test:convert": "monocart-coverage-reports --input ./coverage/coverage-final.json --output ./coverage/lcov.info --reporter lcov",
    "test:unit": "bunx vitest run src/test --exclude src/test/integration",
    "test:integration": "bunx vitest run src/test/integration",
    "test:unit:coverage": "bunx vitest run --coverage --exclude src/test/integration",
    "test:integration:coverage": "bunx vitest run --coverage src/test/integration",
    "prisma:generate": "bun run prisma generate",
    "prisma:migrate": "bun run prisma migrate deploy",
    "seed": "bun run prisma/database-seed.ts",
    "reset": "curl -i -X POST http://localhost:3000/api/v1/reset/ -H 'Content-type: application/json'",
    "build": "bun run build:bundle && bun run build:copy",
    "build:bundle": "bun build src/server.ts --outfile dist/server.js --minify --target bun",
    "build:copy": "cp .env dist/.env && cp .env.stage dist/.env.stage && cp -R prisma dist/prisma",
    "build:stage": "bun run build:bundle && bun run build:copy:stage",
    "build:copy:stage": "cp -f .env dist/.env || true && cp -f .env.stage dist/.env.stage || true && cp -R prisma dist/prisma",
    "sonar": "sonar-scanner",
    "stage": "BUN_ENV=stage bun run dist/server.js",
    "prod": "BUN_ENV=prod bun run dist/server.js",
    "coverage:node": "vitest run --coverage --exclude src/test/integration"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/opentelemetry": "^1.3.1",
    "@elysiajs/swagger": "^1.3.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.203.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@prisma/client": "^6.12.0",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.1",
    "elysia": "latest",
    "ioredis": "^5.7.0",
    "pg": "^8.15.6",
    "prisma": "^6.12.0",
    "redis": "^5.8.2",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@opentelemetry/instrumentation-pg": "^0.55.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "bun-types": "latest",
    "c8": "^10.1.3",
    "eslint": "^9.32.0",
    "monocart-coverage-reports": "^2.12.9",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "module": "src/server.js"
}
