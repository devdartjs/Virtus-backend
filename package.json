{
  "name": "app",
  "version": "1.0.50",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "prettier:check": "bunx prettier --check src/**/*.ts",
    "prettier:write": "bunx prettier --write src/**/*.ts",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "bun run lint --fix",
    "test:coverage": "bunx vitest run --coverage",
    "test:unit": "bunx vitest run src/test --exclude src/test/integration",
    "test:integration": "bunx vitest run src/test/integration",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "bunx prisma migrate deploy",
    "prisma:seed": "bun run src/database/database-seed.ts",
    "build": "bun build src/server.ts --target=bun --outdir=build --external @prisma/client --external .prisma --minify --sourcemap=linked",
    "start": "bun --watch run build/server.js",
    "build:bi": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/server.ts",
    "dhub:build": "docker build -f Dockerfile.stage --build-arg ENV_FILE=.env.test -t dartw/virtus-backend:stage-manual .",
    "dhub:push": "docker push dartw/virtus-backend:stage-manual",
    "fly:deploy": "flyctl deploy --app app-wild-dust-1031 --image dartw/virtus-backend:stage-manual --remote-only --wait-timeout=300s",
    "install:fly": "curl -L https://fly.io/install.sh | sh"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/opentelemetry": "^1.3.1",
    "@elysiajs/swagger": "^1.3.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.203.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@prisma/client": "^6.16.2",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.1",
    "elysia": "latest",
    "ioredis": "^5.7.0",
    "pg": "^8.15.6",
    "prisma": "^6.12.0",
    "redis": "^5.8.2",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@opentelemetry/instrumentation-pg": "^0.55.0",
    "@rollup/rollup-win32-x64-msvc": "^4.52.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "bun-types": "latest",
    "c8": "^10.1.3",
    "cpx": "^1.2.1",
    "eslint": "^9.32.0",
    "monocart-coverage-reports": "^2.12.9",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "module": "src/server.js"
}
